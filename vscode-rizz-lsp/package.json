{
    "name": "rizz-lsp",
    "displayName": "Rizz Language Support",
    "description": "Language Server Protocol client for .rizz files",
    "version": "0.0.3",
    "publisher": "local",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/itu-msc/RizzoMemory.git",
        "directory": "vscode-rizz-lsp"
    },
    "engines": {
        "vscode": "^1.90.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "rizzLsp.checkHealth",
                "title": "Rizz: Check LSP Health",
                "category": "Rizz"
            },
            {
                "command": "rizzLsp.restartServer",
                "title": "Rizz: Restart LSP Server",
                "category": "Rizz"
            }
        ],
        "languages": [
            {
                "id": "rizz",
                "aliases": [
                    "Rizz",
                    "rizz"
                ],
                "extensions": [
                    ".rizz"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "rizz",
                "scopeName": "source.rizz",
                "path": "./syntaxes/rizz.tmLanguage.json"
            }
        ],
        "configuration": {
            "title": "Rizz LSP",
            "properties": {
                "rizzLsp.server.command": {
                    "type": "string",
                    "default": "opam",
                    "description": "Command used to launch the Rizz language server"
                },
                "rizzLsp.server.args": {
                    "type": "array",
                    "default": [
                        "exec",
                        "--",
                        "dune",
                        "exec",
                        "rizzolsp"
                    ],
                    "items": {
                        "type": "string"
                    },
                    "description": "Arguments used to launch the Rizz language server"
                }
            }
        }
    },
    "scripts": {
        "compile": "npm run bundle",
        "bundle": "esbuild ./src/extension.ts --bundle --platform=node --format=cjs --target=node20 --external:vscode --outfile=./out/extension.js",
        "typecheck": "tsc -p ./ --noEmit",
        "watch": "tsc -watch -p ./",
        "vscode:prepublish": "npm run typecheck && npm run bundle",
        "package:vsix": "vsce package",
        "install:local": "npm run package:vsix && code --install-extension rizz-lsp-0.0.3.vsix --force"
    },
    "devDependencies": {
        "@vscode/vsce": "^3.7.1",
        "@types/node": "^22.19.11",
        "@types/vscode": "^1.90.0",
        "esbuild": "^0.27.3",
        "typescript": "^5.9.3"
    },
    "dependencies": {
        "vscode-languageclient": "^9.0.1"
    }
}
