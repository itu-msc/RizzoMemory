{
    "scopeName": "markdown.rizzo.codeblock",
    "injectionSelector": "L:text.html.markdown",
    "patterns": [
        {
            "include": "#rizzo-fenced-code-block"
        }
    ],
    "repository": {
        "rizzo-fenced-code-block": {
            "name": "markup.fenced_code.block.markdown",
            "begin": "(^|\\G)(\\s*)(`{3,}|~{3,})\\s*(rizz|rizzo)\\s*$",
            "beginCaptures": {
                "3": {
                    "name": "punctuation.definition.markdown"
                },
                "4": {
                    "name": "fenced_code.block.language.markdown"
                }
            },
            "end": "(^|\\G)(\\s*)(\\3)\\s*$",
            "endCaptures": {
                "3": {
                    "name": "punctuation.definition.markdown"
                }
            },
            "patterns": [
                {
                    "begin": "(^|\\G)",
                    "while": "(^|\\G)(?!\\s*([`~]{3,})\\s*$)",
                    "contentName": "meta.embedded.block.rizzo",
                    "patterns": [
                        {
                            "include": "source.rizzo"
                        }
                    ]
                }
            ]
        }
    }
}