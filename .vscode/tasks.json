{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "rizz: build",
      "type": "shell",
      "command": "opam",
      "args": ["exec", "--", "dune", "build"],
      "problemMatcher": []
    },
    {
      "label": "rizz: compile extension",
      "type": "shell",
      "command": "npm",
      "args": ["run", "compile"],
      "options": {
        "cwd": "${workspaceFolder}/vscode-rizz-lsp"
      },
      "problemMatcher": "$tsc"
    },
    {
      "label": "rizz: install local extension",
      "type": "shell",
      "command": "npm",
      "args": ["run", "install:local"],
      "options": {
        "cwd": "${workspaceFolder}/vscode-rizz-lsp"
      },
      "problemMatcher": []
    },
    {
      "label": "rizz: prepare extension host",
      "dependsOn": ["rizz: build", "rizz: compile extension"],
      "dependsOrder": "sequence",
      "problemMatcher": []
    },
    {
      "label": "rizz: transpile output.c",
      "type": "shell",
      "command": "npm",
      "args": ["run", "transpile"],
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "rizz: run file",
      "type": "shell",
      "command": "npm",
      "args": ["run", "rizz"],
      "problemMatcher": ["$gcc"],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    }
  ]
}
