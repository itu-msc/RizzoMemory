{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "rizzo: build",
      "type": "shell",
      "command": "opam",
      "args": ["exec", "--", "dune", "build"],
      "problemMatcher": []
    },
    {
      "label": "rizzo: compile extension",
      "type": "shell",
      "command": "npm",
      "args": ["run", "compile"],
      "options": {
        "cwd": "${workspaceFolder}/vscode-rizzo-lsp"
      },
      "problemMatcher": "$tsc"
    },
    {
      "label": "rizzo: install local extension",
      "type": "shell",
      "command": "npm",
      "args": ["run", "install:local"],
      "options": {
        "cwd": "${workspaceFolder}/vscode-rizzo-lsp"
      },
      "problemMatcher": []
    },
    {
      "label": "rizzo: prepare extension host",
      "dependsOn": ["rizzo: build", "rizzo: compile extension"],
      "dependsOrder": "sequence",
      "problemMatcher": []
    },
    {
      "label": "rizzo: transpile output.c",
      "type": "shell",
      "command": "npm",
      "args": ["run", "transpile"],
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "rizzo: run file",
      "type": "shell",
      "command": "npm",
      "args": ["run", "rizzo"],
      "problemMatcher": ["$gcc"],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "type": "cppbuild",
      "label": "C/C++: cl.exe build active file",
      "command": "cl.exe",
      "args": [
        "/Zi",
        "/EHsc",
        "/nologo",
        "/Fe${fileDirname}\\${fileBasenameNoExtension}.exe",
        "${file}"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$msCompile"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Task generated by Debugger."
    }
  ]
}
